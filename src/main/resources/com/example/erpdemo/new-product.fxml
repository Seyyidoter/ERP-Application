<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.erpdemo.NewProductController" spacing="15.0" style="-fx-padding: 20;">
    <Label fx:id="titleLabel" text="Yeni Ürün Ekle">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>

    <GridPane hgap="10.0" vgap="10.0">
        <Label text="Ürün Adı:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Fiyat:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Stok:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="stockField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Birim:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="unitField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button text="Kaydet" onAction="#handleSave"/>
        <Button text="İptal" onAction="#handleCancel"/>
    </HBox>
</VBox>