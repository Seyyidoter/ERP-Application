<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.erpdemo.RequestController" spacing="10.0" style="-fx-padding: 20;">
    <children>
        <Label text="Talep/Teklif İşlemleri">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <TableView fx:id="requestTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="customerIdColumn" prefWidth="100.0" text="Müşteri ID" />
                <TableColumn fx:id="dateColumn" prefWidth="150.0" text="Talep Tarihi" />
                <TableColumn fx:id="statusColumn" prefWidth="200.0" text="Durum" />
            </columns>
        </TableView>
        <HBox spacing="10.0" alignment="CENTER_RIGHT">
            <children>
                <Button fx:id="addButton" text="Yeni Talep Oluştur" onAction="#handleAddRequest" />
                <Button fx:id="viewButton" text="Talebi Görüntüle" onAction="#handleViewRequest" />
                <Button fx:id="deleteButton" text="Talebi Sil" onAction="#handleDeleteRequest" />
            </children>
        </HBox>
    </children>
</VBox>