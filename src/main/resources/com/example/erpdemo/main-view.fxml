<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.erpdemo.MainController"
            prefHeight="700.0" prefWidth="1000.0">

    <left>
        <VBox fx:id="menuPane" prefWidth="200.0" style="-fx-background-color: #2e3b4e; -fx-padding: 10;">
            <Label text="MENÜ" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Müşteri İşlemleri" prefWidth="200.0" onAction="#showCustomers" style="-fx-background-color: #555; -fx-text-fill: white;"/>
            <Button text="Stok İşlemleri" prefWidth="200.0" onAction="#showStock" style="-fx-background-color: #555; -fx-text-fill: white;"/>
            <Button text="Talep/Teklif İşlemleri" prefWidth="200.0" onAction="#showRequests" style="-fx-background-color: #555; -fx-text-fill: white;"/>
            <Button text="Onay İşlemleri" prefWidth="200.0" onAction="#showApprovals" style="-fx-background-color: #555; -fx-text-fill: white;"/>
            <Button text="Raporlar" prefWidth="200.0" onAction="#showReports" style="-fx-background-color: #555; -fx-text-fill: white;"/>

        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: #f4f4f4;">
            <Label text="Gösterge Paneli (Dashboard)" style="-fx-font-size: 24px;"/>
        </StackPane>
    </center>

</BorderPane>